<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">我的问题</h3>
  </div>
  <div class="panel-body">
      <table class="table">
          <thead>
              <th>
                  日期
              </th>
              <th>
                  受理人
              </th>
              <th>
                  报修人
              </th>
              <th>
                  联系方式
              </th>
              <th>
                  处理状态
              </th>
              <th>
                  详细信息
              </th>
              <th>
                  操作
              </th>
          </thead>
          <tbody>
              <% @work_sheets.each do |sheet| %>
                <tr>
                    <td>
                        <%= sheet.work_datetime.strftime("%y-%m-%d") %>
                    </td>
                    <td>
                        <%= sheet.username %>
                    </td>
                    <td>
                        <%= sheet.work_person %>
                    </td>
                    <td>
                        <%= sheet.work_person_phone %>
                    </td>
                    <td>
                        <%= sheet.work_status %>
                    </td>
                    <td>
                        <%= sheet.work_content %>
                    </td>
                    <td>
                        <%= link_to "删除", {:action => 'destroy',:id => sheet.id}, class: "btn btn-danger", data: { confirm: '是否删除?' } %>
                    </td>
                </tr>
              <% end %>
          </tbody>
      </table>
      <%= will_paginate @work_sheets,:previous_label => "上一页",:next_label => "下一页" %>
  </div>
</div>
