<div class="form-wrapper">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">所属组</h3>
      </div>
      <div class="panel-body">
          <%= form_tag :action => 'team_update' do %>
            <div class="form-group">
                <%= select_tag :team_id, options_from_collection_for_select(@teams, 'id', 'name',@team_id),include_blank: "请选择",:class => "form-control"%>
            </div>
            <div class="form-group">
                <%= submit_tag "提交", class: "btn btn-primary btn-block" %>
            </div>
          <% end %>
      </div>
    </div>
</div>
