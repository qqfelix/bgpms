<% if current_user.name == '刘麟' %>
<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">项目类别字典</h3>
  </div>
  <div class="panel-body">
      <%= form_for :dict,:url => {:action => 'dict_create'},:html => {:class => 'form-inline' } do |f| %>
             <div class="form-group">
                 <label for="">键</label>
                 <%= f.text_field :dict_key, class: "form-control" %>
             </div>
             <div class="form-group">
                 <label for="">值</label>
                 <%= f.text_field :dict_value, class: "form-control" %>
             </div>
             <div class="form-group">
                 <%= f.submit "提交", class: "btn btn-primary" %>
             </div>
      <% end %>
      <table class="table">
          <thead>
              <th>
                  键
              </th>
              <th>
                  值
              </th>
              <th>
                  操作
              </th>
          </thead>
          <tbody>
              <% @dicts.each do |dict| %>
                <tr>
                    <td>
                        <%= dict.dict_key %>
                    </td>
                    <td>
                        <%= dict.dict_value %>
                    </td>
                    <td>
                        <%= link_to "删除", {:action => 'dict_destroy',:id => dict.id}, class: "btn btn-danger",:data => {:confirm => '是否删除？'} %>
                    </td>
                </tr>
              <% end %>
          </tbody>
      </table>
  </div>
</div>

<% else %>
<div class="alert alert-danger">
    非系统管理员，无权操作本页面
</div>
<% end %>
