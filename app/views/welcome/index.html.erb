<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">会议室预定</h3>
  </div>
  <div class="panel-body">
      <table class="table table-striped table-bordered table-hover">

        <tr>
          <td>
            会议室
          </td>
          <td>
            时间
          </td>
          <td>
            星期一
          </td>
          <td>
            星期二
          </td>
          <td>
            星期三
          </td>
          <td>
            星期四
          </td>
          <td>
            星期五
          </td>
        </tr>

        <% @meetings.each do |meeting| %>
            <tr>
              <td rowspan="2">
                <%= meeting.name %><br>
                <%= link_to '预定',
                            {:action => 'edit_meetings',:id=>meeting.id}, :class => 'btn btn-primary' %>

              </td>
              <td>
                上午
              </td>
              <td>
                <%= check_box_tag :mon_am,meeting.mon_am,meeting.mon_am,:disabled => true %>&nbsp;
                <%= meeting.mon_amdesc %>
              </td>
              <td>
                <%= check_box_tag :tues_am,meeting.tues_am,meeting.tues_am,:disabled => true %>&nbsp;
                <%= meeting.tues_amdesc %>
              </td>
              <td>
                <%= check_box_tag :wed_am,meeting.wed_am,meeting.wed_am,:disabled => true %>&nbsp;
                <%= meeting.wed_amdesc %>
              </td>
              <td>
                <%= check_box_tag :thur,meeting.thur_am,meeting.thur_am,:disabled => true %>&nbsp;
                <%= meeting.thur_amdesc %>
              </td>
              <td>
                <%= check_box_tag :fri_am,meeting.fri_am,meeting.fri_am,:disabled => true %>&nbsp;
                <%= meeting.fri_amdesc %>
              </td>
            </tr>
            <tr>
              <td>
                下午
              </td>
              <td>
                <%= check_box_tag :mon_pm,meeting.mon_pm,meeting.mon_pm,:disabled => true %>&nbsp;
                <%= meeting.mon_pmdesc %>
              </td>
              <td>
                <%= check_box_tag :tues_pm,meeting.tues_pm,meeting.tues_pm,:disabled => true %>&nbsp;
                <%= meeting.tues_pmdesc %>
              </td>
              <td>
                <%= check_box_tag :wed_pm,meeting.wed_pm,meeting.wed_pm,:disabled => true %>&nbsp;
                <%= meeting.wed_pmdesc %>
              </td>
              <td>
                <%= check_box_tag :thur,meeting.thur_pm,meeting.thur_pm,:disabled => true %>&nbsp;
                <%= meeting.thur_pmdesc %>
              </td>
              <td>
                <%= check_box_tag :fri_pm,meeting.fri_pm,meeting.fri_pm,:disabled => true %>&nbsp;
                <%= meeting.fri_pmdesc %>
              </td>
            </tr>

        <% end %>

      </table>
  </div>
</div>
